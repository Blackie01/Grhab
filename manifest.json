{
    "manifest_version": 3,
    "name": "Grhab",
    "version": "1.0",
    "description": "Take screenshots of pages and convert them to PDF for downloads",
    "permissions": [
      "activeTab",
      "scripting", 
      "tabs"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_icon": {              
          "16": "logo.png",   
          "24": "logo.png",   
          "32": "logo.png"    
        },
        "default_title": "Grhab",   
        "default_popup": "index.html"  
      },
      "background": {
        "service_worker": "background.js"
      }
     
  }
  